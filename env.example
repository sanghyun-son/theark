# TheArk Environment Configuration
# Copy this file to .env and modify as needed

# Environment (development/production/testing)
THEARK_ENV=development

# API Settings
THEARK_API_TITLE=TheArk API
THEARK_API_VERSION=1.0.0

# CORS Settings (comma-separated for multiple origins)
THEARK_CORS_ORIGINS=*

# Authentication Settings
THEARK_AUTH_REQUIRED=false
THEARK_AUTH_HEADER=Authorization

# Logging
THEARK_LOG_LEVEL=INFO

# Summarization Settings
THEARK_DEFAULT_SUMMARY_LANGUAGE=Korean
THEARK_DEFAULT_INTERESTS="Transformers, Video Understanding, Foundation Models, Distributed Training, Large Language Models, Vision Language Models, Video Dataset, GPT, Gemini, Llama, Qwen"

# Paper Filtering Settings
THEARK_PRESET_CATEGORIES=cs.AI,cs.CL,cs.CV,cs.DC,cs.IR,cs.LG,cs.MA

# LLM Settings
THEARK_LLM_API_KEY=
THEARK_LLM_MODEL=gpt-4o-mini
THEARK_LLM_API_BASE_URL=https://api.openai.com/v1
THEARK_LLM_USE_TOOLS=true
THEARK_LLM_MAX_RETRIES=3

# ArXiv Settings
THEARK_ARXIV_API_BASE_URL=https://export.arxiv.org/api/query

# Historical Crawl Settings
THEARK_HISTORICAL_CRAWL_ENABLED=false
THEARK_HISTORICAL_CRAWL_START_DATE=
THEARK_HISTORICAL_CRAWL_RATE_LIMIT_DELAY=10.0
THEARK_HISTORICAL_CRAWL_BATCH_SIZE=100

# Batch Processing Settings
THEARK_BATCH_SUMMARY_INTERVAL=3600
THEARK_BATCH_FETCH_INTERVAL=600
THEARK_BATCH_MAX_ITEMS=1000
THEARK_BATCH_DAILY_LIMIT=10000
THEARK_BATCH_ENABLED=false
THEARK_BATCH_MAX_RETRIES=3
